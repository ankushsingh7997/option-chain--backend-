{
  "compilerOptions": {
    "target": "ES2020",                        // Modern JS target
    "module": "CommonJS",                      // For Node.js
    "rootDir": ".",                            // server.ts is in root
    "outDir": "dist",                          // Output folder
    "esModuleInterop": true,                   // Allow default imports from CJS
    "forceConsistentCasingInFileNames": true,  // Prevent casing bugs
    "strict": true,                            // Enable all strict checks
    "skipLibCheck": true                       // Skip .d.ts checking for speed
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
